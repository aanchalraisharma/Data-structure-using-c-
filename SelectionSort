#include <iostream>
using namespace std;

void swapElements(int &a, int &b) {
    int temp = a;
    a = b;
    b = temp;
}

void selectionSort(int arr[], int n) {
    for (int i = n - 1; i > 0; i--) {     // Move boundary of unsorted part
        int maxIndex = 0;               // Assume first element is largest

        for (int j = 1; j <= i; j++) {  // Find maximum element
            if (arr[j] > arr[maxIndex]) {
                maxIndex = j;
            }
        }
        swapElements(arr[i], arr[maxIndex]);
    }
}
void printArray(int arr[], int n) {
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";
    cout << endl;
}
int main() {
    int arr[] = {64, 25, 12, 22, 11};
    int n = sizeof(arr) / sizeof(arr[0]);

    cout << "Original array: ";
    printArray(arr, n);

    selectionSort(arr, n);

    cout << "Sorted array (ascending order): ";
    printArray(arr, n);

    return 0;
}
